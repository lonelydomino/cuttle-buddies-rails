<%= stylesheet_link_tag "users" %>
<br><br>

<% if @users.empty? %>
    <h1> No users found! </h2>
<% else %>
    <div class="user-box">
        <% @users.each do |u| %>
            <figure class="snip1336">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sample87.jpg" alt="sample87" />
            <figcaption>
                <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/profile-sample4.jpg" alt="profile-sample4" class="profile" />
                <h2><%= u.username %><span>Engineer</span></h2>
                <p><%= u.bio %> </p>
                <%= render partial: 'addform', locals: { item: u.id} %>
                <%= link_to "Add", new_friend_path, class: "follow" if logged_in? %>
                <%= link_to "Profile",class: "info" if logged_in? %>
            </figcaption>
            </figure>
        <% end %>
    </div>
<% end %>

