<%= stylesheet_link_tag "sessions" %>
<br>


<div class="login-box">
    <h2>Login</h2>
    <%= form_with(model: @user, url: "/login", class: "login-form") do |f| %>
        <div class="user-box">    
            <%= f.email_field :email, required: ""%>
           <%= f.label "Email" %>
        </div>
        <div class="user-box">
            <%= f.password_field :password, required: "" %>
            <%= f.label "Password" %>
        </div>
        <%= f.submit "Log in", class: "submit-button"%><br>
    <% end %><br>

    Or log in with:<br> 
    <br><%= button_to "Log in with Google", '/auth/google_oauth2', class: "google-button" %>
</div>
    